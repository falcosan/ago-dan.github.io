---
import { getLangFromUrl, useTranslations } from "../../i18n/utils.ts";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<div class="relative mx-auto px-8 max-w-7xl py-24 md:px-12">
  <div class="mx-auto text-center">
    <h3 class="text-7xl mb-8 antialiased">🎁 🍣</h3>
    <h3
      class="text-sage-500 font-bold text-4xl md:text-4xl lg:text-5xl tracking-tight whitespace-pre-line"
    >
      {t("gift")}
      <br />
      <br />
      USA - Revolut<br />Europe - Caixa
    </h3>
  </div>
</div>
